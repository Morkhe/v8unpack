$(OBJDIR_RELEASE)/InflateStream.o: InflateStream.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c InflateStream.cpp -o $(OBJDIR_RELEASE)/InflateStream.o

clean_release: 
	rm -f $(OBJ_RELEASE) $(OUT_RELEASE)
	rm -rf bin/Release
	rm -rf $(OBJDIR_RELEASE)

